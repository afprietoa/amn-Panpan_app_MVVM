<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define the FAB style -->
    <style name="CustomFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CustomFabShapeAppearance</item>
        <item name="backgroundTint">@color/fab_color</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- Define the shape appearance for the FAB -->
    <style name="CustomFabShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomBottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#F8F7EE</item>
    </style>

      <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#90531D</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>
        <item name="itemTextAppearanceActive">@style/CustomBottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationTextAppearance</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <style name="BottomNavigationItemStyle">
        <item name="android:paddingTop">@dimen/bottom_navigation_icon_padding_top</item>
        <item name="android:paddingBottom">@dimen/bottom_navigation_icon_padding_bottom</item>
    </style>


    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#45373D</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnAdministrador">
    <item name="backgroundTint">#5B4850</item>
    <item name="android:layout_width">200dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:text">Administrador</item>
    <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="btnCliente">
        <item name="backgroundTint">#90531D</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">Cliente</item>
        <item name="fontFamily">@font/poppins_medium</item>

    </style>

</resources>