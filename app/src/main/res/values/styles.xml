<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define the FAB style -->
    <style name="CustomFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CustomFabShapeAppearance</item>
        <item name="backgroundTint">@color/fab_color</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- Define the shape appearance for the FAB -->
    <style name="CustomFabShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>