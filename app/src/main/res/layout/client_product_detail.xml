<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7EE">


    <ImageView
        android:id="@+id/product_baggett_detail"
        android:layout_width="411dp"
        android:layout_height="288dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/baggeeprod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_croissant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Baggett"
        android:textColor="#45373D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_baggett_detail" />

    <TextView
        android:id="@+id/product_descriptionbaggett_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="Pan francÃ©s crujiente y suave."
        android:textColor="#262525"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_croissant" />

    <TextView
        android:id="@+id/product_price_bagett"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif"
        android:text="$ 3.500"
        android:textColor="#965E08"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_descriptionbaggett_detail" />

    <TextView
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price_bagett"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:text="Tu orden"
        android:textColor="#45373D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_price_bagett" />

    <TextView
        android:id="@+id/product_quantity_baggettdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_info"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Cantidad: 1"
        android:textColor="#262525"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_info" />

    <TextView
        android:id="@+id/product_unit_price_baggettdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_quantity_baggettdetail"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="Precio C/U: $ 3.500"
        android:textColor="#262525"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_quantity_baggettdetail" />

    <Button
        android:id="@+id/add_to_cart_buttondetail"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@id/quantity_layout"
        android:backgroundTint="#5B4850"
        android:text="AGREGAR"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_unit_price_baggettdetail" />

    <LinearLayout
        android:id="@+id/quantity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="43dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/add_to_cart_buttondetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_unit_price_baggettdetail">

        <ImageButton
            android:id="@+id/decrement_button_detail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#B8907C"
            android:contentDescription="@string/decrement_button_pd"
            android:padding="10dp"
            android:textColor="@color/white"
            app:srcCompat="@drawable/decrement" />

        <TextView
            android:id="@+id/quantity_bagettdetail"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/increment_button_detail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#B8907C"
            android:contentDescription="@string/increment_button_pd"
            android:padding="10dp"
            android:textColor="@color/white"
            app:srcCompat="@drawable/increment" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>