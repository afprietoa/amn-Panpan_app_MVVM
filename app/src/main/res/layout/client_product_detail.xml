<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/product_image" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Jordan Nike"
        android:textStyle="bold"
        android:layout_below="@id/product_image"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/product_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:textStyle="bold"
        android:layout_below="@id/product_name"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapatos de Lujo"
        android:layout_below="@id/product_description_title"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/product_price_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/product_description"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="500000.0$"
        android:textSize="16sp"
        android:layout_below="@id/product_price_title"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu orden"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/product_price"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad: 1"
        android:layout_below="@id/order_info"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/product_unit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio C/U: 500000.0$"
        android:layout_below="@id/product_quantity"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:id="@+id/quantity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decrement_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/left_rounded_button"
            android:text="-"
            android:padding="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:background="@drawable/center_rounded_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/increment_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/right_rounded_button"
            android:text="+"
            android:padding="10dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="AGREGAR"
        android:backgroundTint="@color/gray700"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/quantity_layout" />
</RelativeLayout>