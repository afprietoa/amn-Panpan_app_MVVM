<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_client_Shopbag_item"
    android:layout_width="359dp"
    android:layout_height="117dp"
    android:layout_margin="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="36dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="horizontal"
            android:padding="8dp">


            <ImageView
                android:id="@+id/img_product_shopping_bag"
                android:layout_width="111dp"
                android:layout_height="101dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/baggeeprod" />


            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/product_name_shopping_bag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:text="Baggett"
                    android:textColor="#45373D"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/quantity_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/decrement_button_shooping_bag"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:backgroundTint="#B8907C"
                        android:contentDescription="@string/decrement_button_pd"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        app:srcCompat="@drawable/decrement" />

                    <TextView
                        android:id="@+id/quantity_shopping_bag"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/decrement_button_shooping_bag"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/increment_button_shopping_bag"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@id/quantity_shopping_bag"
                        android:layout_weight="1"
                        android:backgroundTint="#B8907C"
                        android:contentDescription="@string/increment_button_pd"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        app:srcCompat="@drawable/increment" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/product_price_shopping_bag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="$ 3.500"
                    android:textColor="#965E08"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/delete_button_shopping_bag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:contentDescription="Delete"
                    android:background="@drawable/trash" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
