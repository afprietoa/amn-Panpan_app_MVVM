<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6ED">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="378dp"
        android:layout_height="285dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/location_client" />

    <TextView
        android:id="@+id/textView_message_location2"
        android:layout_width="311dp"
        android:layout_height="151dp"
        android:text="Estamos preparando una función de ubicación especialmente para ti. Pronto podrás acceder a información valiosa.\n\n Agradecemos tu paciencia mientras finalizamos esta emocionante mejora."
        android:textAlignment="center"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="524dp" />

    <TextView
        android:id="@+id/textView_message_charts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Próximamente:\n\Ubicacion Detallada!"
        android:textAlignment="center"
        android:textColor="#45373D"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="436dp" />

</androidx.constraintlayout.widget.ConstraintLayout>