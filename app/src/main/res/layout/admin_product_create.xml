<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/product_create_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/product_create_image1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/image_add"
            android:contentDescription="@string/alt_product_update_image1"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:id="@+id/product_create_image2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/image_add"
            android:contentDescription="@string/alt_product_update_image2" />
    </LinearLayout>

    <EditText
        android:id="@+id/product_create_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_create_images"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/hint_field_product_name"
        android:drawableStart="@drawable/ic_menu"
        android:drawablePadding="10dp"
        android:minHeight="48dp"
        android:inputType="text"
        android:autofillHints="Lorem ipsum"/>

    <EditText
        android:id="@+id/product_create_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_create_name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/hint_field_product_description"
        android:drawableStart="@drawable/ic_menu_info_details"
        android:drawablePadding="10dp"
        android:minHeight="48dp"
        android:inputType="text"
        android:autofillHints="Lorem ipsum"/>

    <EditText
        android:id="@+id/product_create_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_create_description"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/hint_field_product_price"
        android:drawableStart="@drawable/ic_menu_info_details"
        android:inputType="numberDecimal"
        android:drawablePadding="10dp"
        android:minHeight="48dp"
        android:autofillHints="Lorem ipsum"/>

    <Button
        android:id="@+id/create_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/btn_product_create"/>


</RelativeLayout>
