<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white2"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:id="@+id/admin_role"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/menu"
        android:contentDescription="Administrador"
        android:layout_marginBottom="16dp"
        android:onClick="onAdminRoleClick"/>

    <Button
        android:id="@+id/btnCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Categories"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageView
            android:id="@+id/client_role"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:contentDescription="Cliente"
            android:layout_marginBottom="16dp"
            android:onClick="onClientRoleClick"
            android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btnProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Products"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnCategories"
        android:layout_marginTop="20dp" />
    </LinearLayout>

</RelativeLayout>