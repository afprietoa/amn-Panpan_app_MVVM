<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Mi Orden"
        app:titleTextColor="@color/white"/>

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_background"
        android:contentDescription="@string/alt_profile_backg"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/user_image"
        android:contentDescription="@string/alt_login_logo" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:backgroundTint="#B3FFFFFF"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_margin="0dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_profile_form_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_field_profile_name"
                android:drawableStart="@drawable/ic_menu_edit"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="text"
                android:minHeight="48dp"
                android:autofillHints="Lorem ipsum"/>

            <EditText
                android:id="@+id/lastname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_field_profile_lastname"
                android:drawableStart="@drawable/ic_menu_info_details"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="text"
                android:minHeight="48dp"
                android:autofillHints="Lorem ipsum"/>

            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_field_profile_phone"
                android:drawableStart="@drawable/ic_menu_info_details"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginBottom="15dp"
                android:inputType="phone"
                android:minHeight="48dp"
                android:autofillHints="Lorem ipsum"/>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/btn_profile_confirm"
                android:textColor="@color/white"
                android:backgroundTint="#3F51B5" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>



