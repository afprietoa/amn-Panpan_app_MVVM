<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/category_update_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/image_add"
        android:contentDescription="@string/alt_category_create_image"/>

    <EditText
        android:id="@+id/category_update_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_update_image"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/alt_category_create_name"
        android:drawableStart="@drawable/ic_menu_edit"
        android:drawablePadding="10dp"
        android:minHeight="48dp"
        android:inputType="text"
        android:autofillHints="Lorem ipsum"/>

    <EditText
        android:id="@+id/category_update_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_update_name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/hint_category_create_name"
        android:drawableStart="@drawable/ic_menu_info_details"
        android:drawablePadding="10dp"
        android:minHeight="48dp"
        android:inputType="text"
        android:autofillHints="Lorem ipsum"/>

    <Button
        android:id="@+id/update_category_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/btn_category_update" />

</RelativeLayout>